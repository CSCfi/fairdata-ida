# Initialize script with common definitions

SCRIPT=`basename $0`
USAGE="Usage: $SCRIPT username"
PROJECT="null"

INIT_FILE=`dirname $0`/lib/init_script.sh

if [ -e $INIT_FILE ]
then
    . $INIT_FILE
else
    echo "The initialization file $INIT_FILE cannot be found. Aborting." >&2
    exit 1
fi

#--------------------------------------------------------------------------------

USER="$1"

if [ "$USER" = "" ]; then
    echo "$USAGE" >&2
    exit 1
fi

#--------------------------------------------------------------------------------

EXISTS=`$CURL_GET $ADMIN_CREDENTIALS "${REQUEST_URL_ROOT}/ocs/v1.php/cloud/users/${USER}" -H "OCS-APIRequest: true" | grep "<statuscode>100<"`

if [ "$EXISTS" = "" ]; then
    echo "The user '${USER}' does not exist!" >&2
    exit 1
fi

LASTLOGIN=`$OCC user:setting $USER 2>&1 | grep "lastLogin:" | sed -e 's/.*: *//'`

if [ "$LASTLOGIN" != "" ]; then
    LASTLOGIN=`date -u --date "@${LASTLOGIN}" +"%Y-%m-%dT%H:%M:%SZ"`
fi

echo "Last login:"

if [ "$LASTLOGIN" = "" ]; then
    echo "  (never)"
else
    echo "  $LASTLOGIN"
fi

echo "Projects:"

$CURL_GET $ADMIN_CREDENTIALS "${REQUEST_URL_ROOT}/ocs/v1.php/cloud/users/${USER}/groups" -H "OCS-APIRequest: true" | \
    grep "<element>" | sed -e 's/^.*<element>/  /' | sed -e 's/<.*$//' 

echo "Enabled:"

$CURL_GET $ADMIN_CREDENTIALS "${REQUEST_URL_ROOT}/ocs/v1.php/cloud/users/${USER}" -H "OCS-APIRequest: true" |
    grep "<enabled>" | sed -e 's/^.*<enabled>/  /' | sed -e 's/<.*$//' 
